<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-900 min-h-screen flex flex-col">
    <nav class="bg-gray-800 text-white p-4 flex justify-between items-center">
      <div class="text-2xl font-semibold">SETU TECHNOLOGIES INC</div>
      <div>
        <a
          href="/admin-dashboard"
          class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
          >Back to Admin Dashboard</a
        >
      </div>
    </nav>

    <div class="container mx-auto mt-8 px-4 flex-grow">
      <h1 class="text-4xl font-semibold text-center mb-6">Manage Users</h1>

      <!-- Pending Users Table -->
      <div class="bg-white p-8 rounded-lg shadow-md max-w-4xl mx-auto mb-8">
        <h2 class="text-2xl font-semibold mb-4">Pending Users for Approval</h2>
        <% if (pendingUsers.length > 0) { %>
        <table class="table-auto w-full border border-gray-300">
          <thead>
            <tr class="bg-gray-200 text-left text-gray-700">
              <th class="px-4 py-2 border">#</th>
              <th class="px-4 py-2 border">Name</th>
              <th class="px-4 py-2 border">Email</th>
              <th class="px-4 py-2 border">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% pendingUsers.forEach((user, index) => { %>
            <tr class="text-gray-800 border">
              <td class="px-4 py-2 border"><%= index + 1 %></td>
              <td class="px-4 py-2 border"><%= user.name %></td>
              <td class="px-4 py-2 border"><%= user.email %></td>
              <td class="px-4 py-2 border">
                <div class="flex space-x-2">
                  <form
                    action="/approve-user/<%= user.id %>"
                    method="POST"
                    class="inline"
                  >
                    <button
                      type="submit"
                      class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600"
                    >
                      Approve
                    </button>
                  </form>
                  <form
                    action="/reject-user/<%= user.id %>"
                    method="POST"
                    class="inline"
                  >
                    <button
                      type="submit"
                      class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600"
                    >
                      Reject
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <p class="text-gray-700">No pending users for approval.</p>
        <% } %>
      </div>

      <!-- Approved Users Table -->
      <div class="bg-white p-8 rounded-lg shadow-md max-w-4xl mx-auto">
        <h2 class="text-2xl font-semibold mb-4">Approved Users</h2>

        <table class="table-auto w-full border border-gray-300">
          <thead>
            <tr class="bg-gray-200 text-left text-gray-700">
              <th class="px-4 py-2 border">#</th>
              <th class="px-4 py-2 border">Name</th>
              <th class="px-4 py-2 border">Email</th>
              <th class="px-4 py-2 border">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
            <tr class="text-gray-800 border">
              <td class="px-4 py-2 border"><%= index + 1 %></td>
              <td class="px-4 py-2 border"><%= user.name %></td>
              <td class="px-4 py-2 border"><%= user.email %></td>
              <td class="px-4 py-2 border">
                <div class="flex space-x-2">
                  <a
                    href="/edit-user/<%= user.id %>"
                    class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
                    >Edit</a
                  >
                  <form
                    action="/delete-user/<%= user.id %>"
                    method="POST"
                    class="inline"
                  >
                    <button
                      type="submit"
                      class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600"
                    >
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <footer class="bg-gray-800 text-white py-4 mt-8 text-center">
      <p>&copy; 2025 SETU Technologies Inc</p>
    </footer>
  </body>
</html>